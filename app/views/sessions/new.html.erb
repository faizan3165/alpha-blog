<h1 class="display-4 text-center my-4">Login In</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(scope: :session, url: login_path, local: true, class: "shadow-lg p-3 rounded mb-5 bg-dark text-white h-100") do |f| %>

        <div class="form-group row my-4">
          <%= f.label :email, class: "col-2 col-form-label" %>

          <div class="col-10 shadow rounded">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row my-4">
          <%= f.label :password, class: "col-2 col-form-label" %>

          <div class="col-10 shadow rounded">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row my-4 justify-content-center">
          <%= f.submit "Log In", class: "btn btn-success btn-lg form-btn" %>
        </div>

      <% end %>
    </div>

    <%= link_to "[ Cancel and return to Articles Page ]", articles_path, class: "mt-5" %>
  </div>
</div>
