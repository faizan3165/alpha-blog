<h1 class="display-4 text-center my-4"><%= @user.username %>'s Profile</h1>
<%= libravatar_for @user, size: 200 %>

<% if logged_in? && (@user == current_user || current_user.admin?) %>
  <div class="text-center my-4">
    <%= link_to "Edit Your Profile", edit_user_path(@user), class: "btn btn-info btn-lg" %>
  </div>
<% end %>

<h3 class="display-5 text-center my-4">User's Articles</h3>

<%= render "articles/article" %>
