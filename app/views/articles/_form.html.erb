<%= render "shared/errors", obj: @article %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(model: @article, local: true, class: "shadow-lg p-3 rounded mb-5 bg-dark text-white") do |f| %>
        <div class="form-group row my-4" >
          <%= f.label :title, class: "col-2 col-form-label" %>

          <div class="col-10 shadow rounded">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row my-4">
          <%= f.label :description, class: "col-2 col-form-label" %>

          <div class="col-10 shadow rounded">
            <%= f.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row my-4">
          <%= f.label :category, class: "col-2 col-form-label" %>

          <div class="col-10 shadow rounded">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Please select a category, (can be empty)"}, {multiple: true, size: 4, class: "form-select shadow rounded"}) %>
          </div>
        </div>

        <div class="form-group row my-4 justify-content-center">
          <%= f.submit class: "btn btn-success btn-lg form-btn" %>
        </div>

      <% end %>

      <%= link_to "[ Cancel and return to Articles Page ]", articles_path, class: "mb-4" %>
    </div>
  </div>
</div>
